extends ../layouts/app
block variables
  - 
    var page_title = 'I am the home page'
    var description = 'Janus Nic Node Project'

block content
  section.section-padding
    .container
      .row
        .header-section.text-center
          h2= title
        hr.bottom-line
        p.warning.bg-warning='Закончил 8 урок. Переходим к 9-му!'
        ul
          each val in posts
            - var ref = "blog/" + val._id
            li
              a.alist(href=ref)= val.title
