extends ../../layouts/admin

block content

  h1 Delete Category: #{category.name}

  if category_posts.length

    p #[strong Delete the following posts before attempting to delete this category.]

    div(style='margin-left:20px;margin-top:20px')

      h4 Posts

      dl
      each post in category_posts
        dt
          a(href=post.url) #{post.title}
        dd #{post.content}

  else
    p Do you really want to delete this Category?

    form(method='POST' action='')
      div.form-group
        input#id.form-control(type='hidden',name='id', required='true', value=category._id )

      button.btn.btn-primary(type='submit') Delete
