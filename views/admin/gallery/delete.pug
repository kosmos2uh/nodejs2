extends ../../layouts/admin

block content

  h1 Delete Picture: #{image.name}


  p Do you really want to delete this Picture?

  img(src='/uploads/' + image.path, width=200)

  form(method='POST' action='')
    input(type="hidden", name="_csrf", value=csrf)
    div.form-group
      input#id.form-control(type='hidden',name='id', required='true', value=image._id )

    button.btn.btn-primary(type='submit') Delete
