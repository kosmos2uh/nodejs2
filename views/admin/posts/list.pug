extends ../../layouts/admin

block content
  section.section-padding
      hr.bottom-line
      .card.mb-3
        .card-block
          .card-header
            i.fa.fa-table 
            |  #{title}
            a(href='/admin/post/create' class='float-right btn btn-success') Create new
          .card-body
            .table-responsive
              table#dataTable.table.table-bordered(width='100%', cellspacing='0')
                thead
                  tr
                    th #
                    th Title
                    th(colspan=2) Actions
                tbody
                  - var i = 0
                  each post in posts
                    tr
                      td= i++
                      td 
                        a(href=post.url) #{post.title}
                      td
                        a(href=post.url+'/update' class="btn btn-warning") Edit
                      td
                        a(href=post.url+'/delete' class="btn btn-danger") Delete
          if pages > 0
            ul(class="pagination text-center")
              if (current == 1)
                li(class="disabled")
                  a First
              else
                li
                  a( href="/admin/posts/1") First
              - var j = (Number(current) > 5 ? Number(current) - 4 : 1)

              if (j !== 1)
                li(class="disabled")
                  a ...
              - for (; j <= (Number(current) + 4) && j <= pages; j++)
                if (j == current)
                  li(class="active")
                    a= j
                else
                  li
                    - var ref = "/admin/posts/"+j
                    a(href=ref)= j
                if (j == Number(current) + 4 && j < pages)
                  li(class="disabled")
                    a ...
              if (current == pages)
                li(class="disabled")
                  a Last
              else
                li
                  - ref = "/admin/posts/"+pages
                  a(href=ref) Last
