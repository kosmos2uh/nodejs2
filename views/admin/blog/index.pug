extends ../../layouts/admin

block content
  section#feature.section-padding
    .container
      .row
        hr.bottom-line
        .card.mb-3
          .card-header
            i.fa.fa-table 
            |  #{title}
            
          .card-body
            .table-responsive
              table#dataTable.table.table-bordered(width='100%', cellspacing='0')
                thead
                  tr
                    th #
                    th Title
                    th(colspan=2) Actions
                tbody
                  - var i = 0

                  each val in posts
                    - var ref = "blog/" + val._id
                    - i++
                    tr
                      td= i
                      td 
                        a.alist(href=ref)= val.title
                      td Edit
                      td Delete
